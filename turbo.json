{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "NODE_ENV", "DATABASE_URL", "NEXT_API_URL", "WS_SERVER_URL", "INTERNAL_API_KEY"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
     "prisma:generate": {
      "cache": false
    },
    "prisma:migrate": {
      "cache": false
    },
    "start": {
      "cache": false,
      "env": ["BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "NODE_ENV", "DATABASE_URL", "NEXT_API_URL", "WS_SERVER_URL", "INTERNAL_API_KEY"]
    }
  },
    "globalDependencies": [".env"]
}
